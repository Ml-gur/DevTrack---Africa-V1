    {
      "src": "/screenshots/mobile-projects.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile project management view"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your project dashboard",
      "url": "/dashboard",
      "icons": [
        { 
          "src": "/icon-96x96.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Project",
      "short_name": "New",
      "description": "Create a new project",
      "url": "/dashboard?action=new-project",
      "icons": [
        { 
          "src": "/icon-96x96.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View analytics dashboard",
      "url": "/dashboard?view=analytics",
      "icons": [
        { 
          "src": "/icon-96x96.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Kanban Board",
      "short_name": "Kanban",
      "description": "View Kanban board",
      "url": "/dashboard?view=kanban",
      "icons": [
        { 
          "src": "/icon-96x96.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf", ".zip", ".rar"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+devtrack",
      "url": "/?action=%s"
    }
  ]
}
